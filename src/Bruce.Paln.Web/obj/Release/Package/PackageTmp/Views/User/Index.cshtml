@model Bruce.Paln.Entity.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        input {
            max-width:300px;
        }
    </style>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" role="form">
            <h4>登录</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">用户名</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control col-sm-2" })
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-2 control-label">密码</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control col-sm-1" })
                </div>
            </div>

            <div class="form-group" style="display:none;">
                <label for="lastname" class="col-sm-2 control-label">验证码</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.CheckCode, new { @class = "form-control col-sm-1" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="登录" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</body>
</html>
